<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <title>Dashboard</title>
    <style>
        body {
            background-image: url("https://img.freepik.com/free-vector/gradient-network-connection-background_23-2148888131.jpg");
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
            font-family: 'Arial', sans-serif;
        }

        .navbar-nav .nav-item {
            margin: 0 15px;
        }

        .btn {
            width: 150px;
            padding: 15px;
            font-size: 16px;
            border-radius: 50px;
        }

        .btn i {
            margin-right: 8px;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light ">
            <div class="container-fluid">
                <a class="navbar-brand" href="">Dashboard</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <% if (role == "ADMIN" || role == "Editor") { %>
                            <li class="nav-item">
                                <a class="btn btn-success d-flex align-items-center justify-content-center" href="/jobs">
                                    <i class="fas fa-briefcase"></i> Create Jobs
                                </a>
                            </li>
                        <% } %>

                        <% if (role == "ADMIN") { %>
                            <li class="nav-item">
                                <a class="btn btn-warning d-flex align-items-center justify-content-center" href="/roles">
                                    <i class="fas fa-user-tag"></i> Create Roles
                                </a>
                            </li>
                         
                        <% } %>
                        <li class="nav-item">
                            <a class="btn btn-danger d-flex align-items-center justify-content-center" href="/logout">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        <h1 class="text-center my-4 text-white">Jobs</h1>
    </div>
    <div class="container">
        <div class="row mt-5">
            <% if (jobs && jobs.length > 0) { %>
                <% jobs.forEach((job) => { %>
                    <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">Company: <strong><%= job.company %></strong></h5>
                                <h3 class="card-text text-success">Title: <strong><%= job.job_title %></strong></h3>
                                <p class="card-text">Experience: <strong><%= job.experience_required_1 %></strong></p>
                                <p class="card-text">Additional Experience: <strong><%= job.experience_required_2 %></strong></p>
                                <p class="card-text">Salary: <strong><%= job.salary %></strong></p>
                                <button class="btn-warning"><a class="nav-link text-white p-0 m-0"
                                    href="/edit/<%= job._id %>">Edit</a></button>
                            <button class="btn-danger"><a class="nav-link text-white p-0 m-0"
                                    href="/delete/<%= job._id %>">Delete</a></button>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12">
                    <h1 class="text-center mt-5">No Jobs found</h1>
                </div>
            <% } %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    <script src="/javascript/script.js" defer></script>
</body>

</html>
